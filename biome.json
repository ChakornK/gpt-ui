{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useKeyWithClickEvents": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noConstantCondition": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			}
		}
	},
	"files": {
		"include": ["**/*"],
		"ignore": ["./node_modules/**/*", "./.next/**/*"]
	}
}
